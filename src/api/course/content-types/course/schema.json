{
    "kind": "collectionType",
    "collectionName": "courses",
    "info": {
        "singularName": "course",
        "pluralName": "courses",
        "displayName": "Course",
        "description": "Course content type"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "thumbnail": {
            "type": "string"
        },
        "duration": {
            "type": "string"
        },
        "level": {
            "type": "enumeration",
            "enum": [
                "beginner",
                "intermediate",
                "advanced"
            ],
            "default": "beginner"
        },
        "allowedRoles": {
            "type": "json",
            "required": true,
            "default": [
                "student"
            ]
        },
        "modules": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::module.module",
            "mappedBy": "course"
        },
        "instructor": {
            "type": "string"
        },
        "price": {
            "type": "decimal",
            "default": 0
        },
        "isPublished": {
            "type": "boolean",
            "default": false
        }
    }
}